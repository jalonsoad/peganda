  <script language="javascript" type="text/javascript">

		function submitbutton() {
			var form = document.contacto;
			var email_pattern = /^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,4})+$/i;


			if (form.first_name.value == "") {
				alert( "Por favor, Introduzca su nombre" );
				form.first_name.focus();
				return false;
			}
			if (form.last_name.value == "") {
				alert( "Por favor, Introduzca sus apellidos" );
				form.last_name.focus();
				return false;
			}
			if( !email_pattern.test(form.email1.value) ) {
				alert("Por favor, Introduzca un email válido.");
				return false;
			}
			if(form.phone_work.value == "" || form.phone_work.value == null)
			{
				alert( "Por favor, Introduzca su numero de telefono" );
				form.phone_work.focus();
				return false;
			}
			if (checkInternationalPhone(form.phone_work.value)==false)
			{
				alert("Por favor, Introduzca un numero de teléfono válido.");
				form.phone_work.focus();
				return false;
			}
			if (form.account_name.value == "") {
				alert( "Por favor, Introduzca el nombre de su compañía." );
				form.account_name.focus();
				return false;
			}
			if (form.info_product_c.value == "") {
				alert( "Please provide your country" );
				form.info_product_c.focus();
				return false;
			}



		}

</script>
